#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    int secretNumber, guess;
    int attempts = 5;
    int score = 0;

    // Seed the random number generator
    srand(time(0));
    secretNumber = rand() % 100 + 1;

    cout << "ğŸ¯ Welcome to the Number Guessing Game!" << endl;
    cout << "Guess a number between 1 and 100" << endl;
    cout << "You have " << attempts << " attempts.\n" << endl;

    while (attempts > 0) {
        cout << "Enter your guess: ";
        cin >> guess;

        if (cin.fail()) {
            cin.clear();
            cin.ignore(1000, '\n');
            cout << "Please enter a valid number.\n" << endl;
            continue;
        }

        attempts--;

        if (guess == secretNumber) {
            score = attempts + 1;
            cout << "\nğŸ‰ Congratulations! You guessed the correct number." << endl;
            cout << "Your score: " << score << endl;
            break;
        } 
        else if (guess < secretNumber) {
            cout << "Too low!" << endl;
        } 
        else {
            cout << "Too high!" << endl;
        }

        cout << "Attempts left: " << attempts << "\n" << endl;
    }

    if (attempts == 0) {
        cout << "âŒ Game Over!" << endl;
        cout << "The correct number was: " << secretNumber << endl;
    }

    return 0;
}
